{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "target": "es2018",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
